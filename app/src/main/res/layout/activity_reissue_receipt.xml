<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <ImageView
        android:id="@+id/iconReissueReceipt"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:foregroundGravity="center"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_receipt"
        android:layout_marginTop="32dp" />

    <TextView
        android:id="@+id/textViewReissueReceipt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iconReissueReceipt"
        android:layout_centerHorizontal="true"
        android:text="Reissue receipt"
        android:textSize="18sp"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/textViewReissueAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewReissueReceipt"
        android:layout_centerHorizontal="true"
        android:textSize="32sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        android:text="$0.00" />

    <Button
        android:id="@+id/buttonDone"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewReissueAmount"
        android:layout_centerHorizontal="true"
        android:text="Done"
        android:layout_marginTop="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/buttonDone"
        android:layout_marginTop="16dp"
        android:gravity="center">

        <Button
            android:id="@+id/buttonPrintReceipt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Print receipt"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/buttonMoreOptions"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="More options"
            android:layout_marginStart="8dp" />
    </LinearLayout>
</RelativeLayout>
